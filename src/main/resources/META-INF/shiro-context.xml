<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<bean id="shiroFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
	    <property name="securityManager" ref="securityManager"/>
	    <property name="filterChainDefinitions">
	        <value>
				/logout = logout
	        </value>
	    </property>
	</bean>
	
	<bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
	    <property name="realm" ref="myShiroRealm"/>
	    <property name="rememberMeManager" ref="rememberMeManager"/>
	    <!-- Since Shiro 1.2, use Servlet container's session management instead of 'native' session mode -->
	    <!-- Session config is set in web.xml -->
	    <!-- <property name="sessionMode" value="native"/> -->
	    <!-- Session Timeout in 1 hour -->
	    <!-- <property name="sessionManager.globalSessionTimeout" value="3600000" /> -->
	</bean>
	
	<bean id="lifecycleBeanPostProcessor" class="org.apache.shiro.spring.LifecycleBeanPostProcessor"/>


	<bean id="sha512Matcher" class="org.apache.shiro.authc.credential.HashedCredentialsMatcher">
		<property name="hashAlgorithmName" value="${shiro.hashAlgorithmName}" />
		<property name="storedCredentialsHexEncoded" value="${shiro.storedCredentialsHexEncoded}" />
		<property name="hashIterations" value="${shiro.hashIterations}" />
	</bean>
	
	<bean id="myShiroRealm" class="org.apache.shiro.realm.jdbc.JdbcRealm">
		<property name="dataSource" ref="dataSource"/>
		<property name="authenticationQuery" value="select password, CONCAT('${shiro.applicationSalt}', ':', salt) as salt from user where email = ?"/>
		<property name="userRolesQuery" value="SELECT role.name FROM role inner join user_role on user_role.role_id = role.id inner join user on user_role.user_id = user.id and user.email = ? "/>
		<property name="permissionsQuery" value="SELECT p.name FROM role_permission rp inner join permission p on rp.permission_id = p.id inner join role r on r.id = rp.role_id and r.name = ? "/>
		<property name="permissionsLookupEnabled" value="true"/>
		<property name="saltStyle" value="COLUMN"/>
		<property name="credentialsMatcher" ref="sha512Matcher"/>
	</bean>
	
	<bean id="rememberMeManager" class="org.apache.shiro.web.mgt.CookieRememberMeManager">
		<property name="cipherKey" value="#{T(org.apache.shiro.codec.Base64).decode('${cookie.base64.cipherKey}')}"/>
		<property name="cookie" ref="rememberMeCookie"/>
	</bean>
	
	<bean id="rememberMeCookie" class="org.apache.shiro.web.servlet.SimpleCookie">
		<constructor-arg value="${rememeberMe.cookie.name}"/>
		<property name="httpOnly" value="${rememeberMe.cookie.httpOnly}"/>
		<property name="maxAge" value="${rememeberMe.cookie.maxAge}"/>
	</bean>

</beans>